<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Movie Reviews</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; background-color: #fff; color: #000; }
        h1 { text-align: center; }
        button { padding: 5px 10px; background: #eee; border: 1px solid #ccc; cursor: pointer; }
        input, textarea { width: 100%; max-width: 400px; padding: 5px; border: 1px solid #ccc; }
        form { margin: 20px 0; }
        .review { border-bottom: 1px solid #ccc; padding: 10px 0; }
        p { margin: 5px 0; }
    </style>
</head>
<body>
    <h1>Movie Reviews</h1>
    <button id="connectButton">Connect Wallet</button>
    <p id="accountInfo"></p>
    <form id="reviewForm" style="display: none;">
        <label for="movieTitle">Movie Title:</label><br>
        <input type="text" id="movieTitle" required><br><br>
        <label for="reviewText">Review:</label><br>
        <textarea id="reviewText" required rows="4"></textarea><br><br>
        <button type="submit">Submit Review</button>
    </form>
    <div id="reviewsList"></div>

    <script type="module">
        import { web3Enable, web3Accounts, web3FromAddress } from 'https://unpkg.com/@polkadot/extension-dapp@latest';
        import { stringToHex } from 'https://unpkg.com/@polkadot/util@latest';

        const connectButton = document.getElementById('connectButton');
        const accountInfo = document.getElementById('accountInfo');
        const reviewForm = document.getElementById('reviewForm');
        const reviewsList = document.getElementById('reviewsList');
        let selectedAddress = null;
        let signer = null;

        connectButton.addEventListener('click', async () => {
            try {
                const extensions = await web3Enable('Simple Movie Reviews');
                if (extensions.length === 0) {
                    alert('No Polkadot extension found. Install from polkadot.js.org/extension.');
                    return;
                }
                const allAccounts = await web3Accounts();
                if (allAccounts.length === 0) {
                    alert('No accounts found in extension. Create one first.');
                    return;
                }
                selectedAddress = allAccounts[0].address; // Use the first account
                accountInfo.textContent = `Connected: ${selectedAddress}`;
                const injector = await web3FromAddress(selectedAddress);
                signer = injector.signer;
                reviewForm.style.display = 'block';
                connectButton.style.display = 'none';
            } catch (error) {
                alert('Error connecting: ' + error.message);
            }
        });

        reviewForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const movieTitle = document.getElementById('movieTitle').value.trim();
            const reviewText = document.getElementById('reviewText').value.trim();
            if (!movieTitle || !reviewText) return;

            const message = `Movie: ${movieTitle}\nReview: ${reviewText}`;
            try {
                const { signature } = await signer.signRaw({
                    type: 'bytes',
                    data: stringToHex(message),
                    address: selectedAddress
                });
                const reviewDiv = document.createElement('div');
                reviewDiv.classList.add('review');
                reviewDiv.innerHTML = `
                    <strong>${movieTitle}</strong><br>
                    ${reviewText}<br>
                    By: ${selectedAddress}<br>
                    (Signed: ${signature.substring(0, 10)}...${signature.slice(-10)})
                `;
                reviewsList.prepend(reviewDiv); // Add to top
                document.getElementById('movieTitle').value = '';
                document.getElementById('reviewText').value = '';
            } catch (error) {
                alert('Error signing/submitting: ' + error.message);
            }
        });
    </script>
</body>
</html>
